<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:padding="10dip"  android:background="@drawable/border"  android:orientation="vertical">  <TextView    android:id="@+id/date"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_bold"    android:text="@string/date_text"    android:textSize="16sp"/>  <TextView    android:id="@+id/date_text"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_regular"    android:text="@string/date"    android:textSize="14sp"/>  <TextView    android:id="@+id/title"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_bold"    android:text="@string/title"    android:textSize="16sp"/>  <TextView    android:id="@+id/title_text"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_regular"    android:text="@string/title_text"    android:textSize="14sp"/>  <TextView    android:id="@+id/description"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_bold"    android:text="@string/description"    android:textSize="16sp"/>  <TextView    android:id="@+id/description_text"    android:textStyle="bold"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:fontFamily="@font/opensans_regular"    android:text="@string/description_text"    android:textSize="14sp"/></LinearLayout>